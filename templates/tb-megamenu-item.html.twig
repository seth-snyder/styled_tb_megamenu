{% set linkAttributes = link['attributes'] %}
{% if ( link['url'] is defined and link['url'] is not empty ) %}
  {% set tag = "a" %}
{% else  %}
  {% set tag = 'span' %}
  {% if submenu is empty %}
    {% set linkAttributes = linkAttributes.addClass('tbm-no-submenu') %}
  {% endif %}
{% endif %}
<li {{ attributes }} >
  <div class="tbm-link-container">
    {% if tag == 'a' %}
      <{{ tag }} href="{{ link['url'] }}" {{ link['attributes'] }}>
    {% else %}
      <{{ tag }}{{ link['attributes'] }}>
    {% endif %}
      {% if item_config['xicon'] %}
        <i class="{{ item_config['xicon'] }}"></i>
      {% endif %}
      {{ link.title_translate }}
      {% if submenu and block_config['auto-arrow'] %}
        <span class="caret"></span>
      {% endif %}
      {% if item_config['caption'] %}
        <span class="tbm-caption">{{ item_config['caption'] }}</span>
      {% endif %}
    </{{ tag }}>
    {% if submenu %}
      <button class="tbm-submenu-toggle"><span class="visually-hidden">{{ 'Toggle submenu'|t }}</span></button>
    {% endif %}
  </div>
  {{ submenu }}
</li>
